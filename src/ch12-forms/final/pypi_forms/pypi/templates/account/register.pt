<div metal:use-macro="load: ../shared/_layout.pt">
    <div metal:fill-slot="content">

        <div class="content">
            <div>
                <form action="" method="POST" class="account-form">
                    <h1>Register</h1>
                    <input name="name" type="text" placeholder=" Your name" class="form-control">
                    <input name="email" type="text" placeholder=" Your email address " class="form-control">
                    <input name="password" type="password" placeholder=" Password" class="form-control">
                    <button type="submit" class="btn btn-success">Register</button>
                </form>
            </div>
        </div>

    </div>

    <div metal:fill-slot="additional-css">
        <link href="${request.static_url('pypi:static/css/account.css')}" rel="stylesheet">
    </div>

</div>
